<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- content -->

    <com.example.ocr.camera.CameraSourcePreview
        android:id="@+id/camera_source_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.example.ocr.graphics.GraphicOverlay
            android:id="@+id/graphics_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.ocr.camera.CameraSourcePreview>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        </LinearLayout>

        <com.jackandphantom.androidlikebutton.AndroidLikeButton
            android:id="@+id/flash_btn"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="500dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            app:circle_endColor="@android:color/holo_orange_dark"
            app:circle_startColor="@android:color/holo_orange_light"
            app:dot_color_1="@android:color/white"
            app:dot_color_2="@android:color/black"
            app:like_icon="@drawable/flash_on"
            app:unlike_icon="@drawable/flash_off" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="right"
        android:layout_marginTop="150dp">

        <com.jackandphantom.androidlikebutton.AndroidLikeButton
            android:id="@+id/cam_btn"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            app:circle_endColor="@android:color/holo_green_dark"
            app:circle_startColor="@android:color/holo_green_light"
            app:dot_color_1="@android:color/white"
            app:dot_color_2="@android:color/black"
            app:like_icon="@drawable/bubble3"
            app:unlike_icon="@drawable/bubble_pop3" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            >
            <!-- bottom sheet -->
            <br.vince.owlbottomsheet.OwlBottomSheet
                android:id="@+id/owl_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
